<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="alertDialogBlackTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/background_light</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/black</item>
    </style>

    <style name="alertDialogWhiteTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@android:color/background_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>
    </style>

    <style name="alertDialogContrastTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/colorYellow</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textColorPrimary">@color/colorBlue</item>
        <item name="android:textColorSecondary">@color/colorBlue</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/colorBlue</item>
    </style>
</resources>
